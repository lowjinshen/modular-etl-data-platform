{
  "table_name": "bronze_inventory",
  "source_system": "inventory_system",
  "source_type": "file",
  "file_format": "json",
  "file_path": "raw/inventory_*.json",
  "description": "Raw daily inventory snapshots from warehouse management system",
  "primary_keys": ["snapshot_date", "product_id"],
  "partition_by": ["snapshot_date"],
  "columns": [
    {
      "name": "snapshot_date",
      "datatype": "date",
      "nullable": false,
      "description": "Date of inventory snapshot"
    },
    {
      "name": "product_id",
      "datatype": "long",
      "nullable": false,
      "description": "Foreign key to product"
    },
    {
      "name": "quantity_on_hand",
      "datatype": "integer",
      "nullable": false,
      "description": "Quantity available in warehouse"
    },
    {
      "name": "quantity_reserved",
      "datatype": "integer",
      "nullable": false,
      "description": "Quantity reserved for pending orders"
    },
    {
      "name": "reorder_point",
      "datatype": "integer",
      "nullable": true,
      "description": "Minimum quantity before reorder is triggered"
    },
    {
      "name": "warehouse_location",
      "datatype": "string",
      "nullable": true,
      "description": "Warehouse location code"
    },
    {
      "name": "last_restock_date",
      "datatype": "date",
      "nullable": true,
      "description": "Date of last restock"
    }
  ],
  "metadata_columns": [
    {
      "name": "ingestion_timestamp",
      "datatype": "timestamp",
      "nullable": false,
      "description": "Timestamp when record was ingested into Bronze layer"
    },
    {
      "name": "ingestion_date",
      "datatype": "date",
      "nullable": false,
      "description": "Date when record was ingested (for partitioning)"
    },
    {
      "name": "source_file",
      "datatype": "string",
      "nullable": false,
      "description": "Name of source file"
    },
    {
      "name": "record_source",
      "datatype": "string",
      "nullable": false,
      "description": "Source system identifier"
    }
  ]
}
